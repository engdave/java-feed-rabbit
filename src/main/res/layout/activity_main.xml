<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="351dp"
        android:layout_height="516dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_image"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/small_image_1"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:src="@drawable/small_image_1" />

        <ImageView
            android:id="@+id/small_image_2"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:src="@drawable/small_image_2" />

        <ImageView
            android:id="@+id/small_image_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/small_image_3"/>

    </LinearLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="516dp"
        android:gravity="center_horizontal|top"
        android:text="" />

    <TextView
        android:id="@+id/name_rabbit"
        android:layout_width="match_parent"
        android:layout_height="516dp"
        android:gravity="center_horizontal|top"
        android:text="Steve the Rabbit" />


</RelativeLayout>
